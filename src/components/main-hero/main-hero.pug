include layout/utils

-
    var slides = [
        {
            image: require('assets/content/main-hero/1.png'),
            title: 'Создаём нестандартные решения для ТВ-площадок, мероприятий и креативных пространств',
            subTitle: 'Проект под ключ — от идеи до монтажа. Чётко по срокам, точно по задаче, с предсказуемым результатом.',
            buttonText: 'Получить консультацию',
            buttonLink: ''
        },
        {
            image: require('assets/content/main-hero/2.png'),
            title: 'Комплексные технические решения для медиа, ивентов и продакшн-пространств',
            subTitle: 'Проектируем, поставляем и интегрируем оборудование для теле- и видеопроизводства. Работаем под ключ, соблюдаем сроки и технические регламенты.',
            buttonText: 'Открыть раздел ТВ-декорации',
            buttonLink: '/tv-decor'
        },
        {
            image: require('assets/content/main-hero/3.png'),
            title: 'От идеи до реализации — надёжный партнёр в техническом оснащении проектов',
            subTitle: 'Студии, ивенты, ТВ, декорации — всё, что нужно для запуска, работает и выглядит как надо.',
            buttonText: 'Открыть раздел мероприятия',
            buttonLink: '/events'
        },
        {
            image: require('assets/content/main-hero/4.png'),
            title: 'Создаём нестандартные решения для ТВ-площадок, мероприятий и креативных пространств.',
            subTitle: 'Проект под ключ — от идеи до монтажа. Чётко по срокам, точно по задаче, с предсказуемым результатом.',
            buttonText: 'Открыть портфолио',
            buttonLink: '/portfolio'
        },
    ]
.main-hero__wrapper
    .main-hero.swiper
        .swiper-wrapper
            each item, i in slides
                .main-hero__slide.swiper-slide
                    +img(item.image).main-hero__slide-image
                    .main-hero__slide-content
                        if i === 0
                            h1.main-hero__slide-title= item.title
                        else
                            .main-hero__slide-title= item.title
                        .main-hero__slide-subtitle= item.subTitle
                        if item.buttonLink
                            +anchor(item.buttonLink).button.button--accent_100.main-hero__slide-button= item.buttonText
                        else
                            button.button.button--accent_100.main-hero__slide-button(
                                data-action='popup',
                                data-popup='call-popup'
                            )= item.buttonText
        .main-hero__info
            .main-hero__info-item
                span 16+
                span лет опыта работы в индустрии телевизионного и сценического продакшна
            .main-hero__info-item
                span 50+
                span реализованных проектов от федеральных телеканалов до частных студий
            .main-hero__info-item
                span 150+
                span корпоративных клиентов
        .main-hero__pagination
    .main-hero__info._mobile
        .main-hero__info-item
            span 16+
            span лет опыта работы в индустрии телевизионного и сценического продакшна
        .main-hero__info-item
            span 50+
            span реализованных проектов от федеральных телеканалов до частных студий
        .main-hero__info-item
            span 150+
            span корпоративных клиентов
